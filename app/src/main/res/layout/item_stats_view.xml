<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/viga"
        android:gravity="center_horizontal"
        android:text="Andaman and Nicobar Islands"
        android:textColor="#132c33"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:text="Active Case :"
            android:textColor="#132c33" />

        <TextView
            android:id="@+id/tv_active_cases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New Case :"
            android:textColor="#132c33"
            android:fontFamily="@font/assistant"/>

        <TextView
            android:id="@+id/tv_new_infected_cases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Total Recovered :"
            android:textColor="#132c33"
            android:fontFamily="@font/assistant"/>

        <TextView
            android:id="@+id/tv_total_recovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New Recovered :"
            android:textColor="#132c33"
            android:fontFamily="@font/assistant"/>

        <TextView
            android:id="@+id/tv_new_recovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Total Death :"
            android:textColor="#132c33"
            android:fontFamily="@font/assistant"/>

        <TextView
            android:id="@+id/tv_total_death"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New Death:"
            android:textColor="#132c33"
            android:fontFamily="@font/assistant"/>

        <TextView
            android:id="@+id/tv_new_death"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Total Infected :"
            android:textColor="#132c33"
            android:fontFamily="@font/assistant"/>

        <TextView
            android:id="@+id/tv_total_infected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/assistant"
            android:gravity="start"
            android:text="xxx"
            android:textColor="#132c33" />
    </LinearLayout>
</LinearLayout>